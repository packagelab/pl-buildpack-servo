#!/bin/bash

# fail fast
set -o errexit
set -o nounset
set -o pipefail

scriptname=$(basename $0)
case $# in
  1) :;;
  *) echo "$scriptname: usage: $scriptname BUILD_DIR" >&2; exit 2;;
esac

build_dir="$1"

cat <<EOT
---
packages:
  - build-essential
EOT
#libpango1.0-dev
#libpng12-dev
#pkg-config

packages=$(cat $build_dir/README.md | grep '^sudo apt-get install ' | sed 's/^sudo apt-get install //')
for package in $packages
do
  echo "  - $package"
done
